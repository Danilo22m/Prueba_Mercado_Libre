# Variables de Entorno para Ejercicio 2
# Copia este archivo a .env y personaliza según necesites

# =============================================================================
# CONFIGURACIÓN GENERAL
# =============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Directorio de trabajo (por defecto: directorio actual)
# WORK_DIR=/app

# =============================================================================
# RECURSOS COMPUTACIONALES
# =============================================================================

# Número de núcleos CPU a usar (0 = todos disponibles)
NUM_CORES=0

# Memoria máxima en GB (para Docker)
MAX_MEMORY=8

# =============================================================================
# CONFIGURACIÓN DE GRAFO
# =============================================================================

# Tamaño objetivo del subgrafo (número de aristas)
TARGET_EDGES=30000

# Método de selección (wcc, degree, random)
SELECTION_METHOD=wcc

# =============================================================================
# MÉTRICAS DE CENTRALIDAD
# =============================================================================

# Factor de damping de PageRank (0-1)
PAGERANK_ALPHA=0.85

# Calcular Betweenness para todos los nodos (true/false)
# false = más rápido pero menos preciso
BETWEENNESS_FULL=true

# =============================================================================
# PROPAGACIÓN
# =============================================================================

# Probabilidad de activación (0.0-1.0)
PROPAGATION_PROBABILITY=0.1

# Número de simulaciones por estrategia
NUM_SIMULATIONS=100

# =============================================================================
# VISUALIZACIÓN
# =============================================================================

# Tamaño de figura (ancho,alto en pulgadas)
FIGURE_SIZE=16,14

# DPI de salida
FIGURE_DPI=300

# Layout para visualización (spring, kamada_kawai, circular)
GRAPH_LAYOUT=spring

# =============================================================================
# PATHS PERSONALIZADOS
# =============================================================================

# Path al dataset raw (relativo al directorio del proyecto)
# RAW_DATA_PATH=data/raw/web-Stanford.txt

# Path a outputs (relativo al directorio del proyecto)
# OUTPUT_DIR=outputs

# =============================================================================
# CONFIGURACIÓN DE DOCKER
# =============================================================================

# Puerto para servidor web de visualizaciones
WEB_PORT=8000

# Habilitar GPU (experimental)
ENABLE_GPU=false

# =============================================================================
# CONFIGURACIÓN AVANZADA
# =============================================================================

# Semilla para reproducibilidad
RANDOM_SEED=42

# Cache intermedio (true/false)
ENABLE_CACHE=true

# Validar resultados intermedios (más lento pero más seguro)
VALIDATE_INTERMEDIATE=false
